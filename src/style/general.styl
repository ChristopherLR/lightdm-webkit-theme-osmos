.title
  font-size 1.5rem
  line-height 1.2
  font-weight 300
  &:first-letter
    text-transform uppercase

.position-center
  position absolute
  top 50%
  left 50%
  transform translate(-50%, -50%)

.transition-group
  position: relative

.background-image
  mask url('../assets/images/masks/main.svg') 50% 50% / 100% 80%  no-repeat border-box