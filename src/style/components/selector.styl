.selector
  padding 4px 8px
  border-radius 4px
  max-height 36px
  border 1px solid var(--color-unfocus)
  color var(--color-unfocus)
  display flex
  align-items center
  justify-content space-between
  cursor pointer
  &:hover
    border-color rgba(255, 255, 255, .8)
    .selector-arrow
      fill rgba(255, 255, 255, .8)
  &.active
    border-color white
    .selector-arrow
      fill white
    .selector-arrow
      transform rotate(-90deg)

.selector-arrow
  fill var(--color-unfocus)
  transform rotate(90deg)
  transition .2s

.selector-icon
  float left
  margin-right 8px

.selector-label
  font-size 1rem
  font-weight 300
  flex 1
  .widget-user-image
    border-radius 50%
    background-size cover
    background-position center

.selector-label-text
  white-space nowrap
  overflow hidden
  text-overflow ellipsis
  width calc(100% - 33px)